@model AutoShopSystemManagement.Data.Dtos.CreateInfractionModel

@{
    ViewBag.Title = "CrearInfraccion";
    Layout = "~/Views/Shared/_LayoutSystem.cshtml";
}

<h2>CrearInfraccion</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>CreateInfractionModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="user-dashboard" >
        <h1>Agente Torres</h1>
        <div class="row">
            <form role="form" ng-submit="onSend()">
                <div class="form-group col-lg-4 col-md-6 col-xs-12">
                    <label>Numero de Placa</label>
                    @Html.TextBoxFor(x=>x.Infraccion.Placa, new {@class= "form-control text-capitalize" })
                    @Html.ValidationMessageFor(x=>x.Infraccion.Placa,"", new { @class = "text-danger" })
                </div>
                <div class="form-group col-lg-4 col-md-6 col-xs-12">
                    <label>Año</label>
                    @Html.TextBoxFor(x=>x.Infraccion.VehicleYear, new {@class= "form-control text-capitalize" })
                    @Html.ValidationMessageFor(x=>x.Infraccion.VehicleYear,"", new { @class = "text-danger" })
                </div>
                <div class="form-group col-lg-4 col-md-6 col-xs-12">
                    <label>Estado</label>
                    <select class="form-control" ng-model="infraction.EstadoPlaca" ng-options="estado.EstadoId as estado.EstadoName for estado in TicketChar.Estados" />
                </div>
                <div class="form-group col-lg-6 col-md-6 col-xs-12">
                    <label>Uso</label>
                    <select class="form-control" ng-model="infraction.Uso" ng-options="uso.UsoId as uso.UsoName for uso in TicketChar.Usos" />
                </div>
                <div class="form-group col-lg-6 col-md-6 col-xs-12">
                    <label>Color</label>
                    <input class="form-control" ng-model="infraction.VehicleColor" />
                </div>
                <div class="form-group col-lg-6 col-md-6 col-xs-12">
                    <label>Marca del Vehiculo</label>
                    <select class="form-control" ng-model="infraction.VehicleBrandId" ng-options="vehicle.VehicleBrandId as vehicle.VehicleBrandName for vehicle in TicketChar.Vehicle" />
                </div>
                <div class="form-group col-lg-6 col-md-6 col-xs-12">
                    <label>Modelo</label>
                    <input class="form-control" ng-model="infraction.VehicleModel" />
                </div>
                <hr />
                <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                    <label>Licencia No.</label>
                    <input class="form-control text-capitalize" type="text" ng-model="infraction.LicenciaNo" />
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                    <label>Mes</label>
                    <select class="form-control" ng-model="infraction.Mes">
                        <option value="01 ENERO">01 ENERO</option>
                        <option value="02 FEBRERO">02 FEBRERO</option>
                        <option value="03 MARZO">03 MARZO</option>
                        <option value="04 ABRIL">04 ABRIL</option>
                        <option value="05 MAYO">05 MAYO</option>
                        <option value="06 JUNIO">06 JUNIO</option>
                        <option value="07 JULIO">07 JULIO</option>
                        <option value="08 AGOSTO">08 AGOSTO</option>
                        <option value="09 SEPTIEMBRE">09 SEPTIEMBRE</option>
                        <option value="10 OCTUBRE">10 OCTUBRE</option>
                        <option value="11 NOVIEMBRE">11 NOVIEMBRE</option>
                        <option value="12 DICIEMBRE">12 DICIEMBRE</option>
                    </select>
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                    <label>Estado de Licencia</label>
                    <select class="form-control" ng-model="infraction.EstadoLicencia" ng-options="estado.EstadoId as estado.EstadoName for estado in TicketChar.Estados" />
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                    <label>Tipo de Licencia</label>
                    <input class="form-control text-capitalize" type="text" ng-model="infraction.TipoDeLicencia" />
                </div>
                <hr />
                <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                    <label>Primer Nombre</label>
                    <input class="form-control text-capitalize" type="text" ng-model="infraction.FName" />
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                    <label>Segundo Nombre</label>
                    <input class="form-control text-capitalize" type="text" ng-model="infraction.MName" />
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                    <label>Apellido Paterno</label>
                    <input class="form-control text-capitalize" type="text" ng-model="infraction.FLName" />
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                    <label>Apellido Materno</label>
                    <input class="form-control text-capitalize" type="text" ng-model="infraction.LLName" />
                </div>
                <div class="col-lg-12 col-md-12 col-xs-12 form-group">
                    <label>Domicilio del Conductor</label>
                    <input class="form-control text-capitalize" type="text" ng-model="infraction.DomicilioConductor" />
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12 form-group">
                    <label>Ubicaion de la Falta</label>
                    <input class="form-control" type="number" ng-model="coords.latitude" />
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                    <label>Fecha de Expedicion</label>
                    <input class="form-control text-capitalize" type="text" ng-model="infraction.DateEXP" />
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                    <label>Hora</label>
                    <input class="form-control text-capitalize" type="text" ng-model="infraction.HoraEXP" />
                </div>
                <div class="text-center">
                    <h5>INFRACIONES</h5>
                </div>
                <div class="col-lg-4 col-md-4 col-xs-6 form-group" ng-repeat="infra in TicketChar.Tipos">
                    <input class="checkbox-inline" type="checkbox" ng-model="infraction.infraccionID" /> {{infra.TipoDeInfraccionName}}
                </div>
                <div class="col-lg-12 col-md-12 col-xs-12 form-group">
                    <label>Otro Concepto</label>
                    <input class="form-control text-capitalize" type="text" ng-model="infraction.OtroConcepto" />
                </div>
                <div class="col-lg-12 col-md-12 col-xs-12 form-group">
                    <label>Foto de Prueba</label>
                    <input class="form-control" type="file" id="file1" multiple />
                </div>
                <qrcode model="model2" level="level_l" cell="3">{{msg}}</qrcode>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Someter Infracción">
                </div>
            </form>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
