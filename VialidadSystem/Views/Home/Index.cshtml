@model  Vialidad.Common.Models.LoginModel
<div class="row">
    <div class="container" style="margin-top:40px" ng-controller="navBarController">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong> Ingresa Credenciales</strong>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Home"))
                        {
                            <fieldset>
                                <div class="row">
                                    <div class="center-block">
                                        <img class="profile-img" src="/Content/Images/logotam.png" alt="">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-user"></i>
                                                </span>
                                                @Html.TextBoxFor(x=>x.UserName,new { PlaceHolder="Usuario", @class = "form-control" })                                                
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-lock"></i>
                                                </span>
                                                @Html.PasswordFor(x => x.Password, new { PlaceHolder = "Password", @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Entrar">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        }

                        <form role="form" ng-submit="LogOn()">
                            
                        </form>
                    </div>
                    <div class="panel-footer ">
                        <a href="#" onClick="">Asi va quedando la aplicacion Marco y Alma</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>